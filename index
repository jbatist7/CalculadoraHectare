<div class="container">
    <h1>üå± Calculadora de Produ√ß√£o</h1>
    <p class="creditos">
        Calculadora elaborada por Jo√£o Batista - 
        <a href="mailto:jbatist7@gmail.com">jbatist7@gmail.com</a>
    </p>

    <div class="input-group">
        <label for="produto">1. Produto (Nome):</label>
        <input type="text" id="produto" placeholder="p.ex.: Couve">
    </div>

    <div class="input-group">
        <label for="largura">2. Largura (m):</label>
        <input type="number" step="0.01" id="largura" placeholder="0,00" oninput="calcularHectare()">
    </div>

    <div class="input-group">
        <label for="comprimento">3. Comprimento (m):</label>
        <input type="number" step="0.01" id="comprimento" placeholder="0,00" oninput="calcularHectare()">
    </div>

    <div class="input-group">
        <label>4. Tamanho em Hectare (ha - Autom√°tico):</label>
        <div id="hectareDisplay">0.0000</div>
    </div>

    <button id="addButton" onclick="adicionarProduto()">‚ûï Adicionar</button>

    <hr>

    <h2>üìã Lista de Produ√ß√£o</h2>
    <table id="tabelaProducao">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Hectare (ha)</th>
                <th>A√ß√£o</th>
            </tr>
        </thead>
        <tbody>
            </tbody>
    </table>

    <div class="total-hectare">
        Total em Hectare: <span id="totalHectare">0.0000</span> ha
    </div>

    <button id="whatsappButton" onclick="enviarWhatsApp()">üì≤ Enviar para o WhatsApp</button>

</div>

<script>
    // 1 hectare = 10.000 metros quadrados
    const METROS_POR_HECTARE = 10000;

    /**
     * Calcula a √°rea em m¬≤ e converte para hectare (ha).
     * Preenche o campo de exibi√ß√£o autom√°tico.
     */
    function calcularHectare() {
        // Pega os valores e garante que a v√≠rgula (,) seja tratada como ponto (.)
        // Se o campo estiver vazio, retorna 0, o que √© o comportamento esperado agora que o campo inicial est√° vazio.
        const larguraStr = document.getElementById('largura').value.replace(',', '.');
        const comprimentoStr = document.getElementById('comprimento').value.replace(',', '.');

        // Converte para n√∫mero. Se o valor for inv√°lido ou vazio, usa 0.
        const largura = Number(larguraStr) || 0;
        const comprimento = Number(comprimentoStr) || 0;

        const areaM2 = largura * comprimento;
        const areaHa = areaM2 / METROS_POR_HECTARE;

        // Exibe o resultado formatado com 4 casas decimais
        document.getElementById('hectareDisplay').textContent = areaHa.toFixed(4);
        return areaHa;
    }

    /**
     * Adiciona o produto atual √† tabela e recalcula o total.
     */
    function adicionarProduto() {
        const produto = document.getElementById('produto').value.trim();
        const hectare = calcularHectare(); 

        if (!produto) {
            alert('Por favor, preencha o nome do Produto.');
            return;
        }
        if (hectare <= 0) {
            alert('Largura e Comprimento devem ser maiores que zero. Verifique se os campos est√£o preenchidos.');
            return;
        }

        const tabelaBody = document.querySelector('#tabelaProducao tbody');
        const newRow = tabelaBody.insertRow();
        // Armazena o valor bruto de hectare para c√°lculo preciso
        newRow.dataset.hectare = hectare; 

        // Coluna 1: Produto
        newRow.insertCell(0).textContent = produto;
        
        // Coluna 2: Hectare (formatado)
        newRow.insertCell(1).textContent = hectare.toFixed(4);
        
        // Coluna 3: Bot√£o Remover
        const cellAcao = newRow.insertCell(2);
        const removeBtn = document.createElement('button');
        removeBtn.className = 'remove-btn';
        removeBtn.textContent = 'Remover';
        // Chama a fun√ß√£o removerProduto passando a linha para remo√ß√£o
        removeBtn.onclick = function() { removerProduto(newRow); };
        cellAcao.appendChild(removeBtn);

        // Limpa os campos de entrada ap√≥s adicionar (deixa eles vazios)
        document.getElementById('produto').value = '';
        document.getElementById('largura').value = ''; // Limpa o valor (campo vazio)
        document.getElementById('comprimento').value = ''; // Limpa o valor (campo vazio)
        calcularHectare(); // Zera o display de hectare
        
        // Atualiza o total
        atualizarTotalHectare();
    }

    /**
     * Remove uma linha da tabela e recalcula o total.
     */
    function removerProduto(row) {
        row.remove();
        atualizarTotalHectare();
    }

    /**
     * Soma todos os valores de hectare na tabela e atualiza o display de total.
     */
    function atualizarTotalHectare() {
        const linhas = document.querySelectorAll('#tabelaProducao tbody tr');
        let total = 0;

        linhas.forEach(row => {
            // Pega o valor de hectare armazenado no data-attribute
            total += Number(row.dataset.hectare);
        });

        document.getElementById('totalHectare').textContent = total.toFixed(4);
    }

    /**
     * Cria a mensagem formatada com os dados da tabela e abre o link do WhatsApp.
     */
    function enviarWhatsApp() {
        const total = document.getElementById('totalHectare').textContent;
        const linhas = document.querySelectorAll('#tabelaProducao tbody tr');
        
        if (linhas.length === 0) {
            alert('A tabela de produ√ß√£o est√° vazia. Adicione produtos antes de enviar.');
            return;
        }

        let mensagem = `*üìã Resumo da Produ√ß√£o:*\n\n`;
        
        linhas.forEach((row, index) => {
            const produto = row.cells[0].textContent;
            const hectare = row.cells[1].textContent;
            // Cria uma linha para cada produto na mensagem
            mensagem += `${index + 1}. *Prod.:* ${produto} | *√Årea:* ${hectare} ha\n`;
        });

        mensagem += `\n*TOTAL GERAL:* ${total} ha`;

        // Codifica a mensagem para que possa ser usada em uma URL
        const urlMensagem = encodeURIComponent(mensagem);

        // Abre o link do WhatsApp (ser√° aberto no app em celular)
        const whatsappLink = `https://wa.me/?text=${urlMensagem}`;
        
        window.open(whatsappLink, '_blank');
    }

    // A fun√ß√£o calcularHectare() n√£o precisa ser chamada no onload, pois agora os campos iniciam vazios.
    // O valor do hectareDisplay ser√° 0.0000 (do HTML) e ser√° calculado ao primeiro input.
    // Se fosse necess√°rio iniciar com 0.0000, o JS faria: document.getElementById('hectareDisplay').textContent = "0.0000";
</script>
